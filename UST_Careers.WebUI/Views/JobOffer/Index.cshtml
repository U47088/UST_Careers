@using UST_Careers.Domain.Entities
@model IEnumerable<JobOffer>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="bs-example" data-example-id="striped-table">
    <table class="table table-striped">
        <tr>
            <th>@Html.DisplayNameFor(model => model.title)</th>
            <th>@Html.DisplayNameFor(model => model.description)</th>
            <th>@Html.DisplayNameFor(model => model.publish_date)</th>
            <th>@Html.DisplayNameFor(model => model.category_id)</th>
            <th></th>
        </tr>
        @foreach (var jobOffer in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modeljobOffer => jobOffer.title)</td>
                <td>@Html.DisplayFor(modeljobOffer => jobOffer.description)</td>
                <td>@Html.DisplayFor(modeljobOffer => jobOffer.publish_date)</td>
                <td>@Html.DisplayFor(modeljobOffer => jobOffer.category_id)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { jobOfferId = jobOffer.id }) |
                    @Html.ActionLink("Delete", "Delete", new { jobOfferId = jobOffer.id })
                </td>
            </tr>
        }
    </table>
</div>
